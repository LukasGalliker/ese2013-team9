<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eseteam9.shoppyapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light"
        android:windowSoftInputMode="adjustPan" >
        <activity
            android:name="com.eseteam9.shoppyapp.WelcomeScreen"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateVisible|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.eseteam9.shoppyapp.MainActivity"
            android:label="@string/title_activity_display_lists" >
        </activity>
        <activity
            android:name="com.eseteam9.shoppyapp.AddListActivity"
            android:label="@string/title_activity_add_list"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name="com.eseteam9.shoppyapp.DisplayItemsActivity"
            android:label="@string/title_activity_display_items" >
        </activity>
        <activity
            android:name="com.eseteam9.shoppyapp.AddItemActivity"
            android:label="@string/title_activity_add_item" >
        </activity>
    </application>

</manifest>