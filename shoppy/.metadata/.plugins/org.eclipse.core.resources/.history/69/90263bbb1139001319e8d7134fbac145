package com.eseteam9.shoppyapp;

public class Item {
	public final int id;
	public final String name;
	public final int quantity;
	public final boolean bougth;
	public final String timestamp;
	
	public Item(int id, String name, int quantity, boolean bougth, String timestamp) {
		this.id = id;
		this.name = name;
		this.quantity = quantity;
		this.bougth = bougth;
		this.timestamp = timestamp;
	}
	
	public Item(String name, int quantity) {
		this.id = 0;
		this.name = name;
		this.quantity = quantity;
		this.bougth = false;
		this.timestamp = null;
	}
}
